<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>System - Custom HEAD</name>
	<author>Logika.com</author>
	<creationDate>05 Aug 2015</creationDate>
	<copyright>Copyright (C) 2015 Logika snc di F. Ventura e C. All Rights Reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>info@logika.com</authorEmail>
	<authorUrl>http://www.logika.com/</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_CUSTOMHEAD_XML_DESCRIPTION</description>
	<files>
		<filename plugin="customhead">customhead.php</filename>
		<filename>index.html</filename>
		<folder>language</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_system_customhead.ini</language>
		<language tag="en-GB">en-GB/en-GB.plg_system_customhead.sys.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_system_customhead.ini</language>
		<language tag="it-IT">it-IT/it-IT.plg_system_customhead.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="customhead"
					type="textarea"
					filter="raw"
					default=""
					label="PLG_SYSTEM_CUSTOMHEAD_FIELD_LABEL"
					description="PLG_SYSTEM_CUSTOMHEAD_FIELD_DESC"
					rows="20"
					cols="80"
					class="input-xxlarge"/>
			</fieldset>
		</fields>
	</config>
</extension>
